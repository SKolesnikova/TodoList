<h1>todos</h1>

<section class="todoapp stack">
  <header>

    <div class="newtodo">

      <div class="toggle-on">
        <i class="fa fa-angle-down fa-3x" aria-hidden="true"></i>
      </div>

      <%= form_for @todo do |f| %>
          <%= f.text_field :title, placeholder: 'What needs to be done?' %>
      <% end %>

    </div>

  </header>

  <section class="list">

    <% @todos.each do |todo| %>

        <div class="check">

           <div class="toggle">

             <%= form_for todo do |f| %>
              <%= f.check_box :completed, :onclick => "$(this).closest('form').submit()", class: "checkbox-circle"%>
             <% end %>

           </div>

            <span class="<%='line-through' if todo.completed %>"><%=todo.title %></span>
            <%= link_to todo, method: :delete, class: 'destroy' do %>
                <i class="fa fa-times"></i>
            <% end %>

        </div>

    <% end %>

  </section>

  <footer>

    <span class="todo-count"><%= @todo.completed %> items left</span>



  <ul>
    <li class="selected"><%= link_to 'All', todos_path %></li>
    <li><%= link_to 'Active', uncompleted_path %></li>
    <li><%= link_to 'Completed', completed_path %></li>
  </ul>

  </footer>

</section>

